[Unit]
Description=Hello
Requires=hello-pre.target
After=hello-pre.target
IgnoreOnIsolate=yes
ConditionPathExists=/dev/tty0

[Service]
Type=idle
Environment=TERM=linux HOME=/root PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/usr/local/bin/hello
SendSIGHUP=yes
Restart=no
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty1
TTYReset=no
TTYVHangup=no
TTYVTDisallocate=no
